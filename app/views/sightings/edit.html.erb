<h1>Edit Sightings</h1>

<% if @sighting.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @sighting.errors.full_messages.each do |message| %>
    <li><% message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sightings/<%= @sighting.id %>/update" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="sighting_location">Location</label>
  <input id="sighting_location" name="location" type="text">
  <label for="sighting_date">Date</label>
  <input id="sighting_date" name="date" type="date">
  <label for="sighting_time">Time</label>
  <input id="sighting_time" name="time" type="time">
  <button>Update Sighting</button>
</form>

<button>
  <a href="/sightings/<%= @sighting.id %>"
    data-confirm="You sure?"
    data-method="delete"
    rel="nofollow">Delete</a>
</button>
<button><a href="/">Go Back</a></button>

